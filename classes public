public class Gato {
    
    public String nome;
    public Decimal peso;
    public String raca;
	
    public void miar(){
        System.debug(' MIAAAAAUU');
    }
    
    public void andar(){
        System.debug(' está andando');
    }
    
    public void ronronar(){
        System.debug(' está ronronando');
    }
    
    public void infoGato(){
        system.debug('Meu nome é ' + nome + ', meu peso é ' + peso + ' kg, e minha raça é ' + raca);
    }
    
    
}

public class Calculadora {
     
    public Integer somar(Integer n1, integer n2){
    Integer resultado = n1 + n2;
    System.debug('O resultado é:' + resultado);
    
    Return resultado;
    
    }
	
     public Integer subtrair(Integer n1, Integer n2){
        Integer resultado = n1 - n2;
         system.debug('O resultado é: '+ resultado);
                      Return resultado;
    }
public Integer dividir(Integer n1, Integer n2){
         if (n2 == 0){
             System.debug('Não é possível dividir por 0');
             return 0;
         }else{
            return n1 / n2;
         }
         
     }
     public Integer multiplicar(Integer n1, Integer n2){
        Integer resultado = n1 * n2;
         system.debug('O resultado é: '+resultado);
         Return resultado;
    }
	
}

public String pedir(String pizza) {
        if (calabresa) {
            system.debug('Pizza de Calabresa, valor R$ 45,00');
            return pizza
        }else if(quatroQueijos) {
            system.debug('Pizza 4 Queijos, valor R$ 50,00');
            return pizza
        } else if (mariaBonita) {
            system.debug('Pizza Maria Bonita, R$ 60,00');
            return pizza
        } else {
            system.debug('Não possuímos essa Pizza.');
        }

